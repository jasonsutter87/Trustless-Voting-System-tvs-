{
  "name": "@tvs/veilproof",
  "version": "0.1.0",
  "description": "Zero-knowledge proof circuits for vote validity",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "clean": "rm -rf dist",
    "circuit:compile": "circom circuits/vote.circom --r1cs --wasm --sym -o build",
    "circuit:setup": "snarkjs groth16 setup build/vote.r1cs pot12_final.ptau build/vote_0000.zkey"
  },
  "dependencies": {
    "@tvs/core": "workspace:*",
    "@veilproof/core": "file:../../../VeilProof"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/snarkjs": "^0.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
