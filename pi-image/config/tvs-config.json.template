    "veilcloudPath": "/var/lib/tvs/veilcloud",
    "checkpointPath": "/var/lib/tvs/sync-checkpoint.json"
  },
  "database": {
    "host": "localhost",
    "port": 5432,
    "name": "tvs_local",
    "user": "tvs"
  }
}
