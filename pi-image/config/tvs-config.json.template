  "jurisdictionCode": "${JURISDICTION_CODE}",
  "deploymentMode": "edge",
  "cloudSyncUrl": "https://api.tvs.gov",
  "localPort": 3000,
  "sync": {
    "enabled": true,
    "intervalMs": 30000,
    "batchSize": 1000,
    "maxRetries": 3
